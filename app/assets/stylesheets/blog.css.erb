.post {
	padding-bottom: 20px;
	border-bottom: 1px solid #e6e6e6;
	margin-bottom: 20px;
}
/* Images in posts */
.post img {
	max-width: 100%;
}
.post h1 {
    margin-top: 5px;
}
.input.content {
	padding: 0;
}
.post-content > p, .md-preview > p {
    line-height: 150%;
    font-size: 16px;
    margin: 20px 0;
}
.posts .pull-right {
    min-width: 250px;
    text-align: right;
}