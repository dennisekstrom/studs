/* Reset
 *= require reset
 */

/* {{{ Typography and basic styles */

html { font: normal 14px/22px Arial, sans-serif; }
h1, h2, h3 { font-family: 'Ubuntu Condensed', Arial, sans-serif; }
input, textarea, select { font: normal 13px/18px Arial, sans-serif; }

a { color: #e2007f; text-decoration: none; }
a:hover { text-decoration: underline; }

em { font-style: italic; }
strong { font-weight: bold; }

p, blockquote, pre, ul, ol {
  margin: 8px 0;
  padding: 0;
}

code, pre, textarea.code {
  font: normal 12px/16px monospace;
  white-space: pre-wrap;
  text-align: left;
}

h1, h2, h3, h4, h5, h6 {
  margin: 0;
  font-weight: normal;
  line-height: 1.5;
}
h2 { font-size: 24px; }
h3 { font-size: 20px; }
h4 { font-size: 14px; font-weight: bold; }

li { margin: 0; }
ul { list-style: disc; }
ul > li { margin-left: 14px; }
ol { list-style: decimal; }
ol > li { margin-left: 19px; }

q { font-style: italic; }

blockquote {
  padding: 5px 5px 5px 10px;
  border-left: 4px solid #ccc;
}
blockquote *:first-child { margin-top: 0; }
blockquote *:last-child  { margin-bottom: 0; }

dl, dt, dd { margin: 0; }

p.alert, em.alert, strong.alert,
p.error, em.error, strong.error { color: #942; }

/* Micro clearfix */
.cf:before, .cf:after { content:""; display:table; }
.cf:after { clear:both; }
.cf { zoom: 1; }

/* }}} Typography and basic styles */
/* {{{ Layout */

html {
  color: #000;
  background: #f6f6f6;
  overflow-y: scroll;
}

#top {
  background: #fff;
  border-bottom: 2px solid #777;
}

#header, #content {
  margin: 0 auto;
  width: 800px;
}

#header {
  position: relative;
  padding-top: 10px;
}

#content {
  margin-top: 20px;
  margin-bottom: 80px;
}

/* }}} Layout */
/* {{{ Header */

#header h1 {
  float: left;
}
#logo {
  float: left;
  color: #000;
  background: url(<%= image_path 'logo.png' %>) no-repeat 0 0;
  text-indent: -2222px;
  width: 222px;
  height: 110px;
}

#header ul { list-style-type: none; }
#header li { margin: 0; }

ul.nav {
  float: left;
  margin: 85px 0 0 30px;
}

ul.nav li {
  margin: 0;
  display: inline;
  list-style-type: none;
}

ul.nav a {
  float: left;
  margin-left: 6px;
  padding: 3px 8px;
  color: #444;
  background: #fff;
  font-weight: bold;
  font-size: 14px;
  line-height: 20px;
}

ul.nav a.active {
  color: #fff;
  background: #777;
}

#languages { float: right; }
#languages a {
  padding-left: 20px;
  background: #fff url(<%= image_path 'sprites.png' %>) no-repeat 0 -49px;
  font-size: 12px;
}

#userbar {
  position: absolute;
  float: none;
  margin: 0;
  top: 24px;
  right: 0;
  color: #444;
  background: #ddd;
  font-size: 13px;
  line-height: 18px;
}
#userbar li { float: left; }
#userbar a {
  float: left;
  margin: 0;
  padding: 3px 8px;
}
#userbar a {
  padding-left: 26px;
  background: transparent url(<%= image_path 'sprites.png' %>) no-repeat 6px 5px;
  color: #444;
  font-weight: bold;
}
#userbar .resume a { background-position: 6px -107px; }
#userbar .user a { border-left: 4px solid #fff; }
#userbar .logout a {
  background-position: 6px -22px;
  text-transform: lowercase;
  font-size: 12px;
}

/* }}} Header */
/* {{{ Content */

.col, .col.left {
  float: left;
  clear: left;
  width: 380px;
  margin-right: 20px;
}

.col.right {
  clear: right;
  margin-left: 20px;
  margin-right: 0;
}

.wide { clear: both; }

.dialog {
  clear: both;
  margin: 0 auto;
  width: 300px;
}

dl.credentials dt, dl.credentials dd {
  float: left;
  padding: 1px 0;
}
dl.credentials dt {
  clear: left;
  width: 120px;
  color: #333;
  font-style: italic;
}

ul.contacts {
  list-style: none;
  overflow: auto;
}

ul.contacts li {
  float: left;
  width: 200px;
  margin: 10px 30px 20px 0;
}

ul.contacts .role { font-size: 18px; color: #444; }

ul.contacts dl dt { display: none; }
ul.contacts dl { margin: 4px 0; }

.prefix {
  margin-right: 4px;
  color: #666;
}

.justify {
  text-align: justify;
  -webkit-hyphens: auto;
  -moz-hyphens: auto;
  hyphens: auto;
}

a.head.edit {
  float: right;
  line-height: 36px;
}

/* }}} Content */
/* {{{ Forms */

fieldset {
  margin: 8px 0;
  padding: 0;
  border: 0;
}

fieldset.actions {
  margin-top: 10px;
}

input, textarea, select {
  margin: 0;
  color: #000;
}

label, input[type=submit], input[type=button], input[type=checkbox], input[type=radio] {
  cursor: pointer;
}

input.commit { font-weight: bold; }
.actions .commit, .actions .destroy { float: right; }



/* }}} Forms */
