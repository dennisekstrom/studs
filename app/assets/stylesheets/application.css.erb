/* Reset
 *= require reset
 */

/* {{{ Typography and basic styles */

html { font: normal 14px/24px Arial, sans-serif; }
h1, h2, h3 { font-family: 'Ubuntu Condensed', Arial, sans-serif; }

a { color: #e2007f; text-decoration: none; }
a:hover { text-decoration: underline; }

em { font-style: italic; }
strong { font-weight: bold; }

p, blockquote, pre, ul, ol { margin: 8px 0; }

code, pre, textarea.code {
  font: normal 12px/16px monospace;
  white-space: pre-wrap;
  text-align: left;
}

h1, h2, h3, h4, h5, h6 { font-weight: normal; line-height: 1.5; }
h2 { font-size: 24px; }
h3 { font-size: 20px; }
h4 { font-size: 14px; font-weight: bold; }

ul { list-style: disc; }
ul > li { margin-left: 14px; }
ol { list-style: decimal; }
ol > li { margin-left: 19px; }

q { font-style: italic; }

blockquote {
  padding: 5px 5px 5px 10px;
  border-left: 4px solid #ccc;
}
blockquote *:first-child { margin-top: 0; }
blockquote *:last-child  { margin-bottom: 0; }

p.alert, em.alert, strong.alert,
p.error, em.error, strong.error { color: #942; }

/* Micro clearfix */
.cf:before, .cf:after { content:""; display:table; }
.cf:after { clear:both; }
.cf { zoom: 1; }

/* }}} Typography and basic styles */
/* {{{ Layout */

html {
  color: #000;
  background: #f6f6f6;
  overflow-y: scroll;
}

#top {
  background: #fff;
  border-bottom: 2px solid #777;
}

#header, #content {
  margin: 0 auto;
  width: 800px;
}

#header {
  padding-top: 10px;
}

#header h1 {
  float: left;
}
#logo {
  float: left;
  color: #000;
  background: url(<%= image_path 'logo.png' %>) no-repeat 0 0;
  text-indent: -2222px;
  width: 222px;
  height: 110px;
}

#nav {
  float: left;
  margin: 85px 0 0 30px;
}

#nav li {
  display: inline;
  list-style-type: none;
}
#nav a {
  float: left;
  margin-left: 6px;
  padding: 3px 8px;
  color: #444;
  background: #fff;
  font-weight: bold;
  font-size: 14px;
  line-height: 20px;
}

#nav a.active {
  color: #fff;
  background: #777;
}

#content {
  margin-top: 20px;
  margin-bottom: 80px;
}

/* }}} Layout */
/* {{{ Content */

.justify {
  text-align: justify;
  -webkit-hyphens: auto;
  -moz-hyphens: auto;
  hyphens: auto;
}

.col, .col.left {
  float: left;
  clear: left;
  width: 380px;
  margin-right: 20px;
}

.col.right {
  clear: right;
  margin-left: 20px;
  margin-right: 0;
}

ul.contacts {
  list-style: none;
}

ul.contacts li {
  float: left;
  width: 200px;
  margin: 10px 30px 20px 0;
}

ul.contacts .role { font-size: 14px; color: #444; }
ul.contacts .name { font-size: 18px; }

ul.contacts dl dt { display: none; }
ul.contacts dl { margin: 4px 0; }


/* }}} Content */
