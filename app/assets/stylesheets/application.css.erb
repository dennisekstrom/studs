/* Reset
 *= require reset
 */

/* {{{ Typography and basic styles */

html { font: normal 14px/22px Arial, sans-serif; }
h1, h2, h3 { font-family: 'Ubuntu Condensed', Arial, sans-serif; }
input, textarea, select { font: normal 13px/18px Arial, sans-serif; }

a { color: #e2007f; text-decoration: none; }
a:hover { text-decoration: underline; }

em { font-style: italic; }
strong { font-weight: bold; }

p, blockquote, pre, ul, ol {
  margin: 8px 0;
  padding: 0;
}

code, pre, textarea.code {
  font: normal 12px/16px monospace;
  white-space: pre-wrap;
  text-align: left;
}

h1, h2, h3, h4, h5, h6 {
  margin: 0;
  font-weight: normal;
  line-height: 1.5;
}
h2 { font-size: 24px; }
h3 { font-size: 20px; }
h4 { font-size: 14px; font-weight: bold; }

li { margin: 0; }
ul { list-style: disc; }
ul > li { margin-left: 14px; }
ol { list-style: decimal; }
ol > li { margin-left: 19px; }

q { font-style: italic; }

blockquote {
  padding: 5px 5px 5px 10px;
  border-left: 4px solid #ccc;
}
blockquote *:first-child { margin-top: 0; }
blockquote *:last-child  { margin-bottom: 0; }

dl, dt, dd { margin: 0; }

p.alert, em.alert, strong.alert,
p.error, em.error, strong.error { color: #942; }

/* Micro clearfix */
.cf:before, .cf:after { content:""; display:table; }
.cf:after { clear:both; }
.cf { zoom: 1; }

/* }}} Typography and basic styles */
/* {{{ Layout */

html {
  color: #000;
  background: #f6f6f6;
  overflow-y: scroll;
}

#top {
  background: #fff;
  border-bottom: 2px solid #777;
}

#header, #content {
  margin: 0 auto;
  width: 800px;
}

#header {
  position: relative;
  padding-top: 10px;
}

#content {
  margin-top: 20px;
  margin-bottom: 80px;
}

/* }}} Layout */
/* {{{ Header */

#header h1 {
  float: left;
}
#logo {
  float: left;
  color: #000;
  background: url(<%= image_path 'logo.png' %>) no-repeat 0 0;
  text-indent: -2222px;
  width: 222px;
  height: 110px;
}

#header ul { list-style-type: none; }
#header li { margin: 0; }

ul.nav {
  float: left;
  margin: 85px 0 0 30px;
}

ul.nav li {
  margin: 0;
  display: inline;
  list-style-type: none;
}

ul.nav a {
  float: left;
  margin-left: 6px;
  padding: 3px 8px;
  color: #444;
  background: #fff;
  -webkit-border-top-left-radius: 3px;
  -webkit-border-top-right-radius: 3px;
  -moz-border-radius-topleft: 3px;
  -moz-border-radius-topright: 3px;
  border-top-left-radius: 3px;
  border-top-right-radius: 3px;
  font-weight: bold;
  font-size: 14px;
  line-height: 20px;
}

ul.nav a.active {
  color: #fff;
  background: #777;
}

#languages { float: right; }
#languages a {
  padding-left: 20px;
  background: #fff url(<%= image_path 'sprites.png' %>) no-repeat 0 -49px;
  font-size: 12px;
}

#userbar {
  position: absolute;
  float: none;
  margin: 0;
  top: 24px;
  right: 0;
  color: #444;
  background: #ddd;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
  font-size: 13px;
  line-height: 18px;
}
#userbar li { float: left; }
#userbar a {
  float: left;
  margin: 0;
  padding: 3px 8px;
}
#userbar a {
  padding-left: 26px;
  background: transparent url(<%= image_path 'sprites.png' %>) no-repeat 6px 5px;
  color: #444;
  font-weight: bold;
}
#userbar .resume a { background-position: 6px -107px; }
#userbar .user a { border-left: 2px solid #fff; }
#userbar .logout a {
  background-position: 6px -22px;
  text-transform: lowercase;
  font-size: 12px;
}

/* }}} Header */
/* {{{ Content */

.col, .wide { margin-bottom: 20px; }

.col, .col.left {
  float: left;
  clear: left;
  width: 380px;
  margin-right: 20px;
}

.col.right {
  clear: right;
  margin-left: 20px;
  margin-right: 0;
}

.wide { clear: both; }

.dialog {
  clear: both;
  margin: 0 auto;
  width: 300px;
}

dl.credentials dt, dl.credentials dd {
  float: left;
  padding: 1px 0;
}
dl.credentials dt {
  clear: left;
  width: 120px;
  color: #333;
  font-style: italic;
}

ul.contacts {
  list-style: none;
  overflow: auto;
}

ul.contacts li {
  float: left;
  width: 200px;
  margin: 10px 30px 20px 0;
}

ul.contacts .role { font-size: 18px; color: #444; }

ul.contacts dl dt { display: none; }
ul.contacts dl { margin: 4px 0; }

.prefix {
  margin-right: 4px;
  color: #666;
}

.justify {
  text-align: justify;
  -webkit-hyphens: auto;
  -moz-hyphens: auto;
  hyphens: auto;
}

a.head.edit, a.head.cancel {
  float: right;
  line-height: 36px;
}

/* }}} Content */
/* {{{ Tags (tag = floated block tag, itag = inline tag) */

.itag, a.itag, .tag, a.tag, .tag-container .placeholder {
  float: left;
  margin: 1px;
  padding: 0px 4px;
  color: #333;
  background: #ddd;
  border: 1px solid #999;
  -moz-border-radius: 2px;
  -webkit-border-radius: 2px;
  border-radius: 2px;
  font-size: 12px;
  line-height: 16px;
  font-weight: normal;
  text-decoration: none;
  white-space: nowrap;
}
.itag span, .tag span {
  margin-left: 2px;
  color: #999;
  font-size: 11px;
  line-height: 14px;
  vertical-align: text-top;
}
a.tag:hover, a.itag:hover { border-color: #777; background: #ccc; }
a.tag:hover span, a.itag:hover span { color: #a00; }
.tag.highlight, .itag.highlight { background: #ee6; }
.itag {
  float: none;
  display: inline;
  margin: 0;
}
ul.tags { overflow: auto; }
ul.tags li { display: inline; margin: 0; list-style-type: none; }

/* }}} Tags */
/* {{{ Forms */

fieldset {
  margin: 10px 0;
  padding: 0;
  border: 0;
}

fieldset.actions {
  margin-top: 10px;
}

input, textarea, select {
  margin: 0;
  color: #000;
}

input[type=text], input[type=password], textarea, select, .tag-container {
  padding: 3px;
  color: #000;
  background: #fff;
  border: 1px solid #aaa;
  -moz-border-radius: 2px;
  -webkit-border-radius: 2px;
  border-radius: 2px;
}

label, input[type=submit], input[type=button], input[type=checkbox], input[type=radio] {
  cursor: pointer;
}

input.commit { font-weight: bold; }
.actions input.commit, .actions input.destroy { float: right; }

.input {
  position: relative;
  margin: 6px 0;
  overflow: auto;
}

.input label {
  display: block;
  float: left;
  clear: left;
  padding-right: 10px;
  width: 120px;
  border-top: 1px dotted #bbb;
  font-style: italic;
}

.input .wrap { float: left; width: 220px; }
.input.wide .wrap { width: 350px; }
.input .wrap input[type=text], .input .wrap input[type=password],
.input .wrap textarea, .input.select select {
  display: block;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  width: 100%;
}

.input span.hint, .input span.error {
  float: left;
  margin-left: 15px;
  color: #444;
  font-size: 12px;
}
.input span.error { color: #a33; }
.input.wide .hint, .input .hint.block, .input .error.block {
  clear: left;
  margin-left: 130px;
}

/* Inline fieldsets */

fieldset.inline { margin-top: 0; }

fieldset.inline .input {
  float: left;
  margin-right: 10px;
}
fieldset.inline .input label {
  float: none;
  padding-right: 0;
  width: auto;
  border-top: 0;
  line-height: 18px;
}
.input .wrap { float: none; }
fieldset.inline .input.actions { margin-top: 24px; }

/* Tag input */

.tag-container {
  padding: 1px;
  overflow: auto;
  cursor: text;
}
.tag-container input.tag {
  margin: 1px;
  padding: 2px;
  border: 0;
}
.tag-container input.tag:focus { outline: none; }
.tag-container .placeholder { float: left; border: none; background-color: #ddd; }
.tag-container a.tag[draggable] { cursor: move; }
.tag.dragging { opacity: 0.8; }

/* Suggestions list */

ul.suggestions {
  margin: 0;
  padding: 1px;
  background: #f6f6f6;
  border: 1px solid #666;
  -moz-border-radius: 3px;
  -webkit-border-radius: 3px;
  border-radius: 3px;
  list-style: none;
  min-width: 100px;
}
ul.suggestions li { margin: 0; }
ul.suggestions li a {
  display: block;
  padding: 4px 5px;
  color: #333;
  cursor: pointer;
  font-size: 12px;
  line-height: 14px;
}
ul.suggestions li a:hover { text-decoration: none; }
ul.suggestions li.active a { background: #ddd; }
ul.suggestions li a em {
  color: #000;
  font-weight: normal;
  font-style: normal;
  text-decoration: underline;
}
ul.suggestions li.more {
  margin-top: 2px;
  border-top: 1px dotted #666;
  height: 2px;
}

/* }}} Forms */
/* {{{ Tables */

table {
  border-collapse: collapse;
  border: 1px solid #999;
  width: 100%;
  text-align: left;
}
th, td {
  padding: 2px 6px;
  color: #333;
  background: #fbfbfb;
  font-size: 13px;
  line-height: 18px;
  vertical-align: top;
}
th {
  border-bottom: 1px solid #999;
  background: #ddd;
  font-weight: bold;
}
td { border-bottom: 1px solid #ccc; }

tbody tr:last-child td { border-bottom: 0; }

/* }}} Tables */
/* {{{ Specific elements */

/* Resume search form */
.resume-search .input.name .wrap { width: 150px; }
.resume-search .input.skills .wrap { width: 400px; }
.resume-search .input.actions input { float: left; }
.resume-search .input.actions a.reset { float: left; margin-left: 30px; }

/* Resumes table */
td.name, td.email, td.skills { white-space: nowrap; }
td.actions { text-align: right; }

/* }}} Specific elements */
