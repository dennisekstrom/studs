/* Font Face */
@font-face {
    font-family: "Avenir";
    src: url(<%= asset_path 'AvenirLTStd-Roman.otf' %>);
}

@font-face {
    font-family: "Avenir";
    src: url(<%= asset_path 'AvenirLTStd-Heavy.otf' %>);
    font-weight: bold;
}

/* Global Styles */

html,
body {
  height: 100%;
  width: 100%;
  font-family: 'Avenir', sans-serif;
  font-size: 15px;
}

h1, h2, h3, h4, h5, h6 {
  font-family: 'Avenir', sans-serif;
  font-weight: 600;
}

.flash {
  text-align: center;
  margin-bottom: 0px;
  background: #ffffff;
  border: 0;
  border-radius: 0;
}

.alert {
  color: #ff0000;
}

.warning {
  color: #f59000;
}

.notice {
  color: #2f9b11;
}

.content {
  padding-top: 90px;
  padding-bottom: 20px;
}

.vert-text {
  display: table-cell;
  vertical-align: middle;
  text-align: center;
}

.vert-text h1 {
  padding: 0;
  margin: 0;
  font-size: 4.5em;
  font-weight: 700;
}

.form-control-inline {
  display: inline-block;
  width: auto;
}

form .check {
  margin-top: 7px;
}

/* Navigation bar */
.navbar {
  margin: 0;
}
#navigation-bar {
  font-family: 'Avenir', sans-serif;
  height: 70px;
  background: rgba(0, 0, 0, 0.9);
  color: #ffffff;
  font-size: 17px;
  border: 0px;
}
#navigation-bar .logo {
    height: 58px;
    padding-top: 12px;
}
#navigation-bar .navbar-header {
  height: 70px;
}
#navigation-bar .navbar-nav > li > a {
  color: #ffffff;
}
#navigation-bar .navbar-nav > li > a:hover {
  color: #dddddd;
}
#navigation-bar .nav > li > a, 
#navigation-bar .nav > li > a:hover, 
#navigation-bar .nav > li > a:focus,
#navigation-bar .navbar-nav > .active > a, 
#navigation-bar .navbar-nav > .active > a:hover, 
#navigation-bar .navbar-nav > .active > a:focus,
#navigation-bar .navbar-nav > .open > a, 
#navigation-bar .navbar-nav > .open > a:hover, 
#navigation-bar .navbar-nav > .open > a:focus {
    background-color: transparent;
}
/* caret */
#navigation-bar .navbar-nav > li > a .caret {
    border-top-color: #ffffff;
    border-bottom-color: #ffffff;
}
#navigation-bar .navbar-nav > li > a:hover .caret {
    border-top-color: #dddddd;
    border-bottom-color: #dddddd;
}
#navigation-bar .navbar-nav > .open > a .caret, 
#navigation-bar .navbar-nav > .open > a:hover .caret, 
#navigation-bar .navbar-nav > .open > a:focus .caret {
    border-top-color: #dddddd;
    border-bottom-color: #dddddd;
}
#navigation-bar .navbar-collapse.in,
#navigation-bar .navbar-collapse.collapsing {
  background: rgba(0,0,0,0.9);
}
#navigation-bar .navbar-collapse.collapse .navbar-nav > li > a {
  padding-top: 25px;
  padding-bottom: 25px;
}
#navigation-bar .navbar-toggle {
  margin-top: 20px;
  outline: none;
  border: none;
}
#navigation-bar .navbar-toggle:hover {
background-color: #222222;
}
#navigation-bar .navbar-toggle .icon-bar {
background-color: #ffffff;
}
#navigation-bar .collapse .dropdown-menu {
  background: rgba(0,0,0,0.9);
}
#navigation-bar .dropdown-menu > li > a {
  color: #ffffff;
}
#navigation-bar .dropdown-menu > li > a:hover {
  background: #222222;
}

/* Full Page Image Header Area */

.header {
  display: table;
  height: 100%;
  width: 100%;
  background: url(<%= asset_path 'kanske_sista2.jpg' %>) no-repeat center center;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

.image-overlay {
  width: 100%;
  padding: 50px 0;
  color: #FFFFFF;
  margin: 0 auto;
  display: table-cell;
  vertical-align: middle;
}

#header-box > h1 {
    font-size: 4.5em;
    font-family: 'Avenir', sans-serif;
    text-align: center;
    font-weight: 600;
    max-width: 650px;
    margin: 0 auto;
}

@media(max-width: 768px) {
  #header-box > h1{
