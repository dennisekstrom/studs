/* Font Face */

@font-face {
    font-family: 'Avenir';
    src: url(<%= asset_path 'avenirltstd-roman-webfont.eot' %>);
    src: url(<%= asset_path 'avenirltstd-roman-webfont.eot?#iefix' %>) format('embedded-opentype'),
    url(<%= asset_path 'avenirltstd-roman-webfont.woff' %>) format('woff'),
    url(<%= asset_path 'avenirltstd-roman-webfont.ttf' %>) format('truetype'),
    url(<%= asset_path 'avenirltstd-roman-webfont.svg#avenir_lt_std55_roman' %>) format('svg');
    font-weight: normal;
    font-style: normal;
}

@font-face {
    font-family: 'Avenir';
    src: url(<%= asset_path 'avenirltstd-heavy-webfont.eot' %>);
    src: url(<%= asset_path 'avenirltstd-heavy-webfont.eot?#iefix' %>) format('embedded-opentype'),
    url(<%= asset_path 'avenirltstd-heavy-webfont.woff' %>) format('woff'),
    url(<%= asset_path 'avenirltstd-heavy-webfont.ttf' %>) format('truetype'),
    url(<%= asset_path 'avenirltstd-heavy-webfont.svg#avenir_lt_std85_heavy' %>) format('svg');
    font-weight: bold;
    font-style: normal;
}
/* Global Styles */

html,
body {
  height: 100%;
  width: 100%;
  font-family: 'Avenir', sans-serif;
  font-size: 15px;
}

h1, h2, h3, h4, h5, h6 {
  font-family: 'Avenir', sans-serif;
  font-weight: 600;
}

a {
    color: #A32C78;
}
a:hover {
    color: #751E55;
}
.flash {
  text-align: center;
  margin-bottom: 0px;
  background: #ffffff;
  border: 0;
  border-radius: 0;
}

.alert {
  color: #ff0000;
}

.warning {
  color: #f59000;
}

.notice {
  color: #2f9b11;
}

.content {
  padding-top: 90px;
  padding-bottom: 20px;
}

.vert-text {
  display: table-cell;
  vertical-align: middle;
  text-align: center;
}

.vert-text h1 {
  padding: 0;
  margin: 0;
  font-size: 4.5em;
  font-weight: 700;
}

.form-control-inline {
  display: inline-block;
  width: auto;
}

form .check {
  margin-top: 7px;
}

/* Navigation bar */
.navbar {
  margin: 0;
}
.navbar-collapse.collapse {
  padding-left: 0;
  padding-right: 0;

}
#navigation-bar .navbar-collapse.in,
#navigation-bar .navbar-collapse.collapsing {
  background: #f8f8f8;
  min-height: 280px;
  border: 1px solid #dddddd;
  border-top: none;
  margin-top: 10px;
}

#navigation-bar .navbar-toggle:hover {
  background-color: #eeeeee;
}

#navigation-bar .navbar-toggle {
  background-color: #f8f8f8;
  margin-top: 18px;
}

.navbar-default .navbar-nav > li > a.active {
  color: #333333;
}

.navbar-default .navbar-nav ul.dropdown-menu > li > a.active {
  background: #e7e7e7;
}

.navbar-default .navbar-nav ul.dropdown-menu > li > a.active:hover {
  background: #428bca;
}

.navbar-collapse.in .navbar-nav > li > a:hover {
  background-color: #eee;
}

/* Navigation bar */
.navbar {
    margin: 0;
    font-family: 'Avenir', sans-serif;
    height: 70px;
    font-size: 17px;
}
.navbar-collapse .navbar-nav {
    height: 70px;
}
.navbar .logo {
    height: 55px;
    padding-top: 15px;
}
.navbar-nav > li {
    padding-top: 10px;
    height: 50px;
}
/* Full Page Image Header Area */

.header {
    display: table;
    margin-top: -50px;
    padding-top: 220px;
    width: 100%;
    min-height: 800px;
    background: url(<%= asset_path 'd1.jpg' %>) no-repeat center top;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;

}
#header-box {
    color: #ffffff;
}

#header-box > h1 {
    font-size: 4.5em;
    font-family: 'Avenir', sans-serif;
    text-align: center;
    font-weight: 600;
    max-width: 650px;
    margin: 0 auto;
}

@media(max-width: 768px) {
  .header {
      min-height: 640px;
      padding-top: 120px;
  }
  #header-box > h1{
    font-size: 3em;
    margin-top: 50px;
  }
}

@media(max-width: 400px) {
    #header-box > h1 {
        font-size: 2.5em;
    }
}

#header-box > p {
    font-family: 'Avenir', sans-serif;
    text-align: center;
    padding-top: 30px;
    max-width: 600px;
    margin: 0 auto;
}

.read-more {
    margin-top: 100px;
}

.read-more .fa-circle {
    color: rgba(0, 0, 0, 0.3);
}

@media(max-width: 768px) {
    .read-more {
        margin-top: 60px;
        margin-bottom: 60px;
    }
}

/* About */

.about {
    background: #ffffff;
    padding-top: 80px;
}
.features {
    margin-top: 30px;
}
.features > div {
    margin-top: 20px;
}
@media(max-width: 768px) {
    .about {
        padding: 30px;
        padding-bottom: 40px;
    }
    .features {
        margin-top: 10px;
    }
}
.about .read-more {
    margin-top: 40px;
    margin-bottom: 60px;
}

.the-team {
  background: url(<%= asset_path 'bibblan.jpg' %>) no-repeat;
  background-position: 0 -100px;
  min-height: 400px;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;

}

@media(max-width: 768px) {
    .the-team {
        background-position: center center;
    }
}

/* Input styles */
.btn {
    border: none;
    font-family: inherit;
    font-size: inherit;
    color: #fff;
    background: none;
    cursor: pointer;
    display: inline-block;
    letter-spacing: 1px;
    font-weight: normal;
    outline: none;
    position: relative;
    background: #333;
    padding: 8px 15px;
}
.btn-group > .btn:not(:last-child) {
    border-right: 3px solid #666;
}
.btn:hover {
    color: #fff;
    background: #666;
}


#password_generator {
  margin-top: 10px;
}

/* Contact */

.contact {
  padding: 50px 0;
}

.contact .heading {
  padding-bottom: 50px;
}

@media(max-width: 768px) {
    .contact {
        padding: 30px;
    }

    .contact .heading {
        padding-bottom: 20px;
    }
}
.contact .contact-card {
  width: 340px;
  max-width: 95%;
  margin: auto;
  margin-bottom: 50px;
}

.contact .contact-photo {
  width: 90px;
  margin-right: 18px;
  display: inline-block;
  vertical-align: middle;
}

.contact .contact-details {
  display: inline-block;
  vertical-align: middle;
  text-align: left;
}

@media(max-width: 400px) {
    .contact .contact-card {
        width: 200px;
        text-align: center;
    }
    .contact .contact-photo {
        clear: both;
        margin: 5px;
    }
    .contact .contact-details {
        text-align: center;
    }
}
/* Footer */

footer {
  padding: 100px 0;
}

/* Not Found */
.not-found {
  padding: 100px;
}
.not-found .body {
  margin-top: 10px;
}

/* Admin forms */

.dialog.delete .btn.cancel, .btn.margin-right {
    margin-right: 10px;
}

.btn.margin-left {
    margin-left: 10px;
}


/* Suggester */
.tag-container {
  padding-left: 4px;
  cursor: text;
}
.tag-container.form-control {
  height: auto;
}
.tag-container a.tag, a.itag {
  color: #444444;
  background: #eeeeee;
  border: 1px solid #cccccc;
  -moz-border-radius: 2px;
  -webkit-border-radius: 2px;
  border-radius: 2px;
  padding: 1px 4px;
  margin: 2px;
  font-size: 12px;
  vertical-align: baseline;
  display: inline-block;
}
.tag-container a.tag:hover, a.itag:hover {
  text-decoration: none;
  color: #222222;
  background: #dddddd;
}
.tag-container a.tag span {
  color: #999999;
  margin-left: 3px;
}
.tag-container a.tag:hover span {
  color: #900000;
}
.tag-container input.tag {
  border: 0;
  outline: none !important;
  vertical-align: baseline;
  display: inline-block;
}
ul.suggestions {
  margin: 0;
  padding: 0;
  background: #eeeeee;
  border: 1px solid #cccccc;
  -moz-border-radius: 3px;
  -webkit-border-radius: 3px;
  border-radius: 3px;
  list-style: none;
  min-width: 100px;
}
ul.suggestions li { 
  margin: 0; 
}
ul.suggestions li a {
  display: block;
  padding: 4px 5px;
  color: #444444;
  cursor: pointer;
}
ul.suggestions li.active a {
  background: #dddddd;
}
ul.suggestions li a:hover {
  text-decoration: none;
}
ul.suggestions li a em {
  color: #000;
  font-weight: normal;
  font-style: normal;
  text-decoration: underline;
}
ul.suggestions li.more {
  margin-top: 2px;
  border-top: 1px dotted #666;
  height: 2px;
}
.has-error.error {
   font-weight: bold;
    color: maroon;
}
.table.resumes {
    margin-top: 20px;

}
.table.resumes .actions {
    width: 80px;
}
.table.files .actions {
    width: 250px;
    text-align: right;
}
/* Login */
.session {
  padding-top: 30px;
}
.session h2 {
  margin-bottom: 20px;
}
.form-horizontal .checkbox input[type="checkbox"] {
  margin-left: -5px;
}

/*Events*/
.my-event {
  color: #000000;
  background: #f0f0f0;
}

/* Front page news */
.news {
  padding-top: 80px;
  padding-bottom: 80px;
}
/* Instagram */
.news ul.instagram {
  padding: 0px;
}
.news .instagram li {
  list-style-type: none;
  padding: 0 10px 10px 0px;
  display: inline;
  float: left;
}
.news .instagram img {
  width: 110px;
}
/* Instagram index*/
.external-posts ul.instagram {
  padding: 0px;
  list-style-type: none;
}
.external-posts .instagram li {
  padding: 0 10px 10px 0px;
  display: inline;
  float: left;
  text-align: center;
}
.external-posts .instagram a.instagram {
  width: 200px;
  margin-bottom: 5px;
}
@media (min-width: 768px) {
  .external-posts .instagram a.instagram {
    width: 230px;
  }
}
@media (min-width: 992px) {
  .external-posts .instagram a.instagram {
    width: 195px;
  }
}
@media (min-width: 1200px) {
  .external-posts .instagram a.instagram {
    width: 240px;
  }
}
.external-posts .instagram img {
  width: 100%;
}

.news .blog .post h3 {
  margin: 10px 0px 0px;
}
img.front-page-featured-image {
  max-width: 100%;
}
.featured-image-preview {
  margin-bottom: 30px;
}
.featured-image-preview img {
  max-width: 100%;
}