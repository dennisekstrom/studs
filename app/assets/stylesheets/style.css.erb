/* Button styles */

/* General button style (reset) */
.btn-3d {
    border: none;
    font-family: 'Avenir';
    font-size: inherit;
    color: #ffffff;
    background: none;
    cursor: pointer;
    padding: 25px 80px;
    display: inline-block;
    margin: 15px 30px;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 700;
    outline: none !important;
    position: relative;
    -webkit-transition: all 0.3s;
    -moz-transition: all 0.3s;
    transition: all 0.3s;
}

.btn-3d:after {
    content: '';
    position: absolute;
    z-index: -1;
    -webkit-transition: all 0.3s;
    -moz-transition: all 0.3s;
    transition: all 0.3s;
}

.btn-cerise {
    background: #df288c;
    color: #fff !important;
    box-shadow: 0 6px #c70f74;
    -webkit-transition: none;
    -moz-transition: none;
    transition: none;
    border-radius: 0 0 5px 5px;
    color: #ffffff;
}

.btn-cerise:hover {
    box-shadow: 0 4px #c70f74;
    top: 2px;
    color: #ffffff;
}

.btn-cerise:active {
    box-shadow: 0 0 #c70f74;
    top: 6px;
    color: #ffffff;
}

.btn-submit {
  padding: 10px 25px;
  margin: 10px 0px;
}


#password_generator {
  margin-top: 10px;
}

/* Contact */

.contact {
  padding: 100px 0;
  position: absolute;
  top: 200%;
  width: 100%;
  height: 100%;
  z-index: 2;
  background: #ffffff;
}

.contact .heading {
  padding-bottom: 50px;
}

.contact .contact-card {
  width: 340px;
  max-width: 95%;
  margin: auto;
  margin-bottom: 50px;
}

.contact .contact-photo {
  width: 130px;
  margin-right: 30px;
  display: inline-block;
  vertical-align: middle;
}

.contact .contact-details {
  display: inline-block;
  vertical-align: middle;
  text-align: left;
}

/* Footer */

footer {
  padding: 100px 0;
}

/* Not Found */
.not-found {
  padding: 100px;
}
.not-found .body {
  margin-top: 10px;
}

/* Admin forms */

.dialog.delete .btn.cancel, .btn.margin-right {
    margin-right: 10px;
}

.btn.margin-left {
    margin-left: 10px;
}


/* Suggester */
.tag-container {
  padding-left: 4px;
  cursor: text;
}
.tag-container a.tag, a.itag {
  color: #444444;
  background: #eeeeee;
  border: 1px solid #cccccc;
  -moz-border-radius: 2px;
  -webkit-border-radius: 2px;
  border-radius: 2px;
  padding: 2px 4px;
  margin-right: 4px;
  vertical-align: baseline;
}
.tag-container a.tag:hover, a.itag:hover {
  text-decoration: none;
  color: #222222;
  background: #dddddd;
}
.tag-container a.tag span {
  color: #999999;
  margin-left: 3px;
}
.tag-container a.tag:hover span {
  color: #900000;
}
.tag-container input.tag {
  border: 0;
  outline: none !important;
  vertical-align: baseline;
}
ul.suggestions {
  margin: 0;
  padding: 0;
  background: #eeeeee;
  border: 1px solid #cccccc;
  -moz-border-radius: 3px;
  -webkit-border-radius: 3px;
  border-radius: 3px;
  list-style: none;
  min-width: 100px;
}
ul.suggestions li { 
  margin: 0; 
}
ul.suggestions li a {
  display: block;
  padding: 4px 5px;
  color: #444444;
  cursor: pointer;
}
ul.suggestions li.active a {
  background: #dddddd;
}
ul.suggestions li a:hover {
  text-decoration: none;
}
ul.suggestions li a em {
  color: #000;
  font-weight: normal;
  font-style: normal;
  text-decoration: underline;
}
ul.suggestions li.more {
  margin-top: 2px;
  border-top: 1px dotted #666;
  height: 2px;
}
.has-error.error {
   font-weight: bold;
    color: maroon;
}
.table.resumes {
    margin-top: 20px;
}