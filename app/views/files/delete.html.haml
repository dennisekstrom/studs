- active_menu :files
.container
  .row
    .col-sm-10.col-sm-offset-1.col-md-8.col-md-offset-1
      .row
        .col-sm-8.col-sm-offset-4.col-xs-12
          .dialog.delete
            %h2= t_model_action()
            %p= t('actions.delete_prompt_html', type: t('models.the.file'), name: @file.to_s)
            .actions
              = button_to t('actions.delete'), file_path(@file), method: :delete , :class => :"destroy btn btn-danger pull-left margin-right"
              = action_link :cancel, files_path, :"btn btn-default"
