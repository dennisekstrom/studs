.contact
  .container
    .row
      .col-md-6.col-md-offset-3.heading.text-center
        %h2= t '.contact'
        %p.lead= t '.contact_lead'

  .container
    .row
      .col-md-6.col-xs-col-12
        .contact-card
          .contact-photo
            %img.img-responsive.img-circle{ :src => image_path("bratt.png")}
          .contact-details
            %h4
