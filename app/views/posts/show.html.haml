- active_menu :posts
.container
  .row
    .col-md-10.col-md-offset-1
      .post
        .published= l(@post.created_at, :format=>:ymd)
        %h1.clear= @post.title
        .post-content.one-post
          = markdown @post.content
        %p
          .btn-group
            - if can? :manage, @post
              %a.btn.btn-primary{ :href => url_for([:edit, :post]) }
                %i.fa.fa-edit
                = t('actions.edit')
              %a.btn.btn-primary{ :href => url_for([:delete, :post]) }
                %i.fa.fa-trash-o
                = t('actions.delete')
              %a.btn.btn-primary{ :href => url_for([:posts]) }
                = t('actions.back')