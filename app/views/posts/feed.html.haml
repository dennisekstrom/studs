- active_menu :newsfeed
.posts-header
  .container
    .row
      .col-md-8.col-md-offset-1
        %h1=t('.heading')
.container
  .row
    .col-md-7.col-md-offset-1
      - @posts.each do |post|
        %a{name: post.id, class: 'anchor'}
        .post
          = render post
          %a.read-more-open
            =t('.readmore')
            %i.fa.fa-arrow-circle-o-down.pull-right
          %a.read-more-close.hide
            =t('.close')
            %i.fa.fa-times-circle.pull-right
    / .col-md-3
    /   %h1=t('.info-heading')
    /   %p=t('.info-text')
    /   %br
    /   %p
    /     %img.img-responsive.img-rounded{ :src => image_path("mattis.jpg")}
    /   %p.text-center=t('.info-responsible')
