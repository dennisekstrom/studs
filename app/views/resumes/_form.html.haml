= ext_form_for @resume, :html => {:class => [:resume, 'form-horizontal'], :role => 'form'} do |f|
  = f.text_field_row :name, hint: true
  = f.select_row :masters, Resume::MASTERS.map { |m| [t_masters(m), m] }, hint: true
  = f.date_select_row :birthdate, start_year: 35.years.ago.year, end_year: 18.years.ago.year, hint: true, default: Date.new(1990,1,1)
  = f.email_field_row :email, hint: true
  = f.phone_field_row :phone, hint: true
  = f.text_field_row :skill_list, hint: true, suggest: :existing_skills
  .row
    .col-sm-8.col-sm-offset-4.col-xs-12
      - if can? :read, Resume
        = action_link :cancel, @resume, :"btn btn-default btn-danger"
      = f.submit