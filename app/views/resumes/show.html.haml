- active_menu :resumes
- experiences = @resume.experiences_by_kind

.container
  .row
    .col-sm-8.col-sm-offset-2.col-xs-12
      .column.general
        %h2.title
          = @resume.name
        - if can? :destroy, @resume
          = action_link :delete, [:delete, @resume], :icon, :"btn btn-default btn-danger"
        - if can? :edit, @resume
          = action_link :edit, [:edit, @resume], :icon, :"btn btn-default"
        = link_to 'PDF', resume_path(@resume, format: :pdf), class: [:action, :download, :btn, :"btn-default"], title: t('actions.download')

        - if @resume.image?
          = link_to @resume.image.url, class: 'profile image' do
            %img{ src: @resume.image.small.url, alt: '' }/


        %dl.section.credentials
          = attribute_definition :street, @resume.phone, :resume
          = attribute_definition :postcode, @resume.phone, :resume
          = attribute_definition :city, @resume.phone, :resume
          = attribute_definition :email, mail_to(@resume.email), :resume
          = attribute_definition :phone, @resume.phone, :resume

        .section.skills
          %h3= t_attribute :resume, :skills
          %ul.tags
            - @resume.skills.each do |s|
              %li= link_to s, resumes_path(s: s.name), :class => :tag

        = render partial: 'experience_for_kind', locals: { kind: 'education',  experiences: experiences['education'], resume: @resume}

      .column.experiences
        - if can?(:edit, @resume)
          %h2= action_link t_model_action(:experience, :add), [:new, @resume, :experience], :"add btn btn-default"
        - (Experience::KINDS - %w(education)).each do |kind|
          = render partial: 'experience_for_kind', locals: { kind: kind,  experiences: experiences[kind], resume: @resume}