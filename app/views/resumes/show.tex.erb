<%
  experiences = @r.experiences_by_kind
  username = nil
  if @r.user_id.present?
    user = User.find(@r.user_id)
    username = user.login
  end
  split_name = @r.name.split(" ", 2)
  first_name = split_name[0]
  family_name = split_name[1]
%>

\documentclass[]{friggeri-cv} % Add 'print' as an option into the square bracket to remove colors from this template for printing

\begin{document}

\header{<%=htex first_name %>}{<%=htex family_name %>}{student} % Your name and current job title/field

%----------------------------------------------------------------------------------------
%	SIDEBAR SECTION
%----------------------------------------------------------------------------------------

\begin{aside} % In the aside, each new line forces a line break
\section{contact}
<%=htex @r.street %>
<%=htex @r.postcode %>, <%=htex @r.city %>
~
<%=htex @r.phone %>
~
\href{mailto:<%=htex @r.email %>}{<%=htex @r.email %>}<% if r.linkedin_url.present? %>
\href{<%= @r.full_linkedin_url %>}{linkedin://<%= r.linkedin_url %>} <% end %>
<% if @r.skills.count > 0 %>\section{skills}
<%=htex @r.skills.to_sentence %> <% end %>
\end{aside}

%----------------------------------------------------------------------------------------
%	EDUCATION SECTION
%----------------------------------------------------------------------------------------

<% if experiences["education"].is_a?(Array) && experiences["education"].count > 0 %>
\section{education}

\begin{entrylist}
  <% experiences["education"].each do |exp| %>
\entry
{<%=htex "#{exp.start_date.strftime('%Y')}--#{exp.end_date ? exp.end_date.strftime('%Y') : 'present'}"%>}
{<%=htex exp.title%>}
{<%=htex exp.organization %>, <%=htex exp.location %>}
{<%= exp.description.present? ? htex(exp.description) : '' %>}
  <% end %>
\end{entrylist}
<% end %>

%----------------------------------------------------------------------------------------
%	WORK EXPERIENCE SECTION
%----------------------------------------------------------------------------------------

<% if experiences["work"].is_a?(Array) && experiences["work"].count > 0 %>
\section{experience}

\begin{entrylist}
  <% experiences["work"].each do |job| %>
\entry
{<%=htex "#{job.start_date.strftime('%Y')}--#{job.end_date ? job.end_date.strftime('%Y') : 'present'}"%>}
{<%=htex job.organization %>}
{<%=htex job.location %>}
{<%=htex job.title %> \\
<%= job.description.present? ? htex(job.description) : '' %>}
  <% end %>
\end{entrylist}
<% end %>

<% if experiences["extracurricular"].is_a?(Array) && experiences["extracurricular"].count > 0 %>
\section{extracurricular}

\begin{entrylist}
  <% experiences["extracurricular"].each do |job| %>
\entry
{<%=htex "#{job.start_date.strftime('%Y')}--#{job.end_date ? job.end_date.strftime('%Y') : 'present'}"%>}
{<%=htex job.organization %>}
{<%=htex job.location %>}
{<%=htex job.title %> \\
<%= job.description.present? ? htex(job.description) : '' %>}
  <% end %>
\end{entrylist}
<% end %>

\end{document}