- max_skills_shown = 7
- resumes ||= @resumes
- filtered_skills ||= @skills || []
%table.resumes
  - cols = %w(name email skills)
  %thead
    %tr
      - cols.each do |col|
        %th{ :class => col }= t_attribute(:resume, col)
      %th.actions &nbsp;
  %tbody
    - if resumes.empty?
      %tr
        %td.empty{ colspan: cols.size}>= t('resumes.none')
    - resumes.each do |res|
      %tr
        %td.name= link_to res.name, res
        %td.email= mail_to res.email
        %td.skills<
          - skills = res.skills_except(@skills)
          - skills[0...max_skills_shown].each do |s|
            = link_to s, url_for(params.merge({s: s})), :class => :itag
          - if skills.size > max_skills_shown
            %span.more &hellip;
        %td.actions
          = link_to t('actions.show'), res
