- max_skills_shown = 6
- resumes ||= @resumes
- filtered_skills ||= @filter.skills || []
%table.resumes.table
  - cols = %w(name email skills)
  %thead
    %tr
      - cols.each do |col|
        %th{ :class => col }= t_attribute(:resume, col)
      %th.actions
  %tbody
    - if resumes.empty?
      %tr
        %td.empty{ colspan: cols.size}>= t('resumes.no_results')
    - resumes.each do |res|
      %tr
        - if res.linkedin_url?
          %td.name= link_to res.name, 'http://www.linkedin.com/in/' + res.linkedin_url, class: 'action show'
        - else
          %td.name= res
        %td.email= mail_to res.email
        %td.skills<
          - skills = res.skills_except(filtered_skills)
          - skills[0...max_skills_shown].each do |s|
            = link_to s, url_for(params.merge({s: s})), :class => :itag
          - if skills.size > max_skills_shown
            %span.more &hellip;
        %td.actions
          = link_to 'PDF', resume_path(res, format: :pdf), class: [:action, :download], title: t('actions.download')
