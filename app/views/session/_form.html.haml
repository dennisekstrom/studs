.container.session
  .row
    .col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
      = form_tag login_do_path, :class => [:login, "form-horizontal"], :role => "form" do
        .row
          .col-sm-8.col-sm-offset-4.col-xs-12
            %h2= t 'session.login'
        .form-group
          = label_tag :login, t_attribute(:login), :class => ["col-sm-4", "col-xs-12", "control-label"]
          .input.text.col-sm-8.col-xs-12
            = text_field_tag :login, '', :class => ["form-control"]
        .form-group
          = label_tag :password, t_attribute(:password), :class => ["col-sm-4", "col-xs-12", "control-label"]
          .input.text.col-sm-8.col-xs-12
            = password_field_tag :password, '', :class => ["form-control"]
        .form-group
          = label_tag :remember, t_attribute(:remember_me), :class => ["col-sm-4", "col-xs-6", "control-label"]
          .input.checkbox.col-sm-8.col-xs-6
            = check_box_tag :remember, 1, true
        .row
          .col-sm-8.col-sm-offset-4
            = submit_tag t('session.login'), :class => [:commit, "button", "btn", "btn-cerise", "btn-submit"]

