= ext_form_for :contact_form, :url => {controller: :contact_form, action: :create}, method: :post, :html => {:class => [:contact_form, 'form-horizontal'], :role => 'form'} do |f|
  = f.text_field_row :name
  = f.text_field_row :company
  = f.email_field_row :email
  = f.text_area_row :message, rows: 5
  .row
    .col-sm-8.col-sm-offset-4.col-xs-12
      %button.btn-3d.btn-cerise.btn-submit= t 'attributes.contact_form.send'
