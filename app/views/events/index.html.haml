- active_menu :events
.thin-header.vertical-segment
  #event-circle.circle.yellow.centered
    %h1= t '.event'
.container
  .row
    .col-md-8.col-md-offset-2
      %h1.text-center= t '.upcoming_events'
      = render partial: 'table', locals: {events: @upcoming_events}
      %br
      %h1.text-center= t '.past_events'
      = render partial: 'table', locals: {events: @past_events}
      %br
      - if can? :create, Event
        %a.btn.btn-primary{ :href => url_for([:new, :event]) }
          %i.fa.fa-file-o
          = t('actions.create')
